<h1>Users</h1>

<table class="table table-striped table-bordered table-hover table-condensed">
  <thead>
  <tr>
    <th>Email</th>
    <th>Role</th>
    <th colspan="3"></th>
  </tr>
  </thead>



  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <% if user.user_type == "0" %>
        <td>User</td>
        <%end%>
        <% if user.user_type == "1" %>
         <td>Admin</td>
        <%end%>
        <% if user.user_type == "2" %>
            <td>SuperAdmin</td>
        <%end%>
        </tr>
  <% end %>
  </tbody>
</table>